
@{
    ViewData["Title"] = "PasswordChange";
}
@model PasswordChangeViewModel
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial");
}
<div class="row">
    <div class="col-md-6 offset-md-3 mt-5">
        <h2>Şifre Yenileme</h2>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }
        <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
        </div>
        <form asp-controller="Member" asp-action="PasswordChange" method="post">
           
        
            <div class="row mb-3">
                <label class="col-md-4 col-form-label" asp-for="PasswordOld"></label>
                <div class="col-md-8">
                    <input asp-for="PasswordOld" class="form-control">
                    <span class="text-danger" asp-validation-for="PasswordOld"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-md-4 col-form-label" asp-for="PasswordNew"></label>
                <div class="col-md-8">
                    <input asp-for="PasswordNew" class="form-control">
                    <span class="text-danger" asp-validation-for="PasswordNew"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-md-4 col-form-label" asp-for="PasswordConfirm"></label>
                <div class="col-md-8">
                    <input asp-for="PasswordConfirm" class="form-control">
                    <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-success mt-4 ">Şifremi değiştir</button>
        </form>

    </div>
</div>