
@{
    ViewData["Title"] = "Index";
}
@model UserViewModel
<div class="row">
    <div class="col-md-12 offset-md-5">
       
            <h2>Kullanıcı Bilgileri</h2>

            <div class="card" style="width: 18rem;">
                @if (String.IsNullOrEmpty(Model.PictureUrl))
            {
                <img class="rounded" src="/userpictures/default_user_picture.png"/>
            }else{
                <img class="rounded" src="/userpictures/@(Model.PictureUrl)"/>
            }
                <div class="card-body">
                    <h5 class="card-title">@Model.UserName!.ToUpper()</h5>
                <p class="card-text bg-dark "></p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">@Model.PhoneNumber</li>
                <li class="list-group-item bg-dark"></li>
                    <li class="list-group-item">@Model.Email</li>
                    <li class="list-group-item bg-dark"></li>
                </ul>
                <div class="card-body">
                @Model.Bio
                </div>
            <div class="btn btn-danger"> <a asp-action="MemberDelete" asp-route-userName="@Model.UserName">Hesabımı Sil</a></div>
            </div>
       


</div>
</div>