@if (User.Identity!.IsAuthenticated)
{
    <ul class="navbar nav me-0">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                @User.Identity.Name
            </a>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" asp-route-returnurl="/Home/Index" asp-controller="Member" asp-action="LogOut">Çıkış Yap</a></li>

            </ul>
        </li>
    </ul>
}
else
{
    <a asp-controller="Home" asp-action="SignIn" class="btn btn-outline-success mx-2">Üye Giriş</a>
    <a asp-controller="Home" asp-action="SignUp" class="btn btn-outline-primary">Üye Kayıt</a>
}