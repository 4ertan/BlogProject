@if (User.Identity!.IsAuthenticated)
{
    if (User.IsInRole("Admin"))
    {
        <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-outline-danger"> <i class="bi bi-code-slash"></i>Admin Sayfası</a>
    }

    <a asp-controller="Member" asp-action="PostAdd" class="btn btn-outline-success mx-2">Makale Ekle<i class="bi bi-sticky-fill"></i></a>
    <ul class="navbar nav me-0">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                @User.Identity.Name.ToUpper()
            </a>

            <ul class="dropdown-menu">
                <li><a class="dropdown-item"  asp-controller="Member" asp-action="Index">Profil</a></li>
                <li><a class="dropdown-item"  asp-controller="Member" asp-action="MemberPosts">Gönderilerim</a></li>
                <li><a class="dropdown-item"  asp-controller="Member" asp-action="UserEdit">Kullanıcı Düzenle</a></li>
                <li><a class="dropdown-item" asp-controller="Member" asp-action="PasswordChange">Şifremi Değiştir</a></li>
                <li><a class="dropdown-item" asp-route-returnurl="/Home/Index" asp-controller="Member" asp-action="LogOut">Çıkış Yap</a></li>

            </ul>
        </li>
    </ul>
   
   
}
else
{
    <a asp-controller="Home" asp-action="SignIn" class="btn btn-outline-success mx-2">Üye Giriş</a>
    <a asp-controller="Home" asp-action="SignUp" class="btn btn-outline-primary">Üye Kayıt</a>
}