
@{
    ViewData["Title"] = "SignIn";
}
@model SignInViewModel
<div class="row">
    <div class="col-md-6 offset-md-3 mt-5">
<h2>Kullanıcı Giriş</h2>
        <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
        </div>
<form asp-controller="Home" asp-action="SignIn" method="post">
            <div class="row mb-3">
                <label class="col-md-4 col-form-label" asp-for="Email"></label>
                <div class="col-md-8">
                    <input asp-for="Email" class="form-control">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-md-4 col-form-label" asp-for="Password"></label>
                <div class="col-md-8">
                    <input asp-for="Password" class="form-control">
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
            </div>
    <div class="form-check">
        <label class="form-check-label" asp-for="RememberMe"></label>
        <input class="form-check-input" asp-for="RememberMe">
    </div>
    <button type="submit" class="btn btn-success mt-4 ">Giriş Yap</button>
</form>
</div>
</div>