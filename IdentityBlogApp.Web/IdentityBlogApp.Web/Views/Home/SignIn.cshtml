
@{
    ViewData["Title"] = "SignIn";
   
}
@model SignInViewModel
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial");
}
<div class="row">
    <div class="col-md-6 offset-md-3 mt-5 bg-secondary rounded mt-2 mb-2">
<h2 class="mt-3 mb-2 text-white">Kullanıcı Giriş</h2>
        <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
        </div>
        <form asp-controller="Home" asp-action="SignIn" asp-route-ReturnUrl="@Context.Request.Query["ReturnUrl"]" method="post">
            <div class="row mb-3">
                <label class="col-md-4 col-form-label" asp-for="Email"></label>
                <div class="col-md-8">
                    <input asp-for="Email" class="form-control">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-md-4 col-form-label" asp-for="Password"></label>
                <div class="col-md-8">
                    <input asp-for="Password" type="password" class="form-control">
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-check">
                        <label class="form-check-label" asp-for="RememberMe"></label>
                        <input class="form-check-input" asp-for="RememberMe">
                    </div>
                </div>
                <div class="col-md-6">
                    <a class="btn btn-outline-secondary btn-sm float-end" asp-controller="Home" asp-action="ForgetPassword">Şifremi unuttum</a>
                </div>
            </div>

    
    <button type="submit" class="btn btn-warning mt-4 mb-4">Giriş Yap</button>
</form>
</div>
</div>
